class Solution {
public:
    vector<vector<int>> minimumAbsDifference(vector<int>& arr) {
        sort(arr.begin(), arr.end());
        int miniDiff = INT_MAX;
        int n = arr.size();
        vector<vector<int>> ans;
        for(int i = 0; i < n-1; i++) {
            int diff = abs(arr[i] - arr[i+1]);
            miniDiff = min(miniDiff, diff);
        }
        for(int i = 0; i < n-1; i++) {
            int diff = abs(arr[i] - arr[i+1]);
            cout << miniDiff << " ";
            if(diff == miniDiff)
                ans.push_back({arr[i], arr[i+1]});
        }
        cout << endl;
        return ans;
    }
};
