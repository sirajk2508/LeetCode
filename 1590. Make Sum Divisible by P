class Solution {
public:
    int minSubarray(vector<int>& nums, int p) {
        int n = nums.size();
        int ans = n, need = 0, cur = 0;
        for(auto i : nums)
            need = (need + i) % p;
        unordered_map<int, int> last = {{0, -1}};
        for(int i = 0; i < n; i++) {
            cur = (cur + nums[i]) % p;
            last[cur] = i;
            int want = (cur - need + p) % p;
            if(last.count(want))
                ans = min(ans, i - last[want]);
        }
        return ans < n ? ans : -1;
    }
};
